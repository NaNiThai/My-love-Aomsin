    }

    .flower {
        position: relative;
        width: 200px;
        height: 300px;
        display: flex;
        justify-content: center;
        align-items: flex-end;
        animation: float 4s ease-in-out infinite;
    }

    @keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }

    /* Leaves group */
    .flower__leafs {
        position: relative;
        width: 100px;
        height: 150px;
        transform-origin: bottom center;
        animation: grow 3s ease forwards;
    }

    @keyframes grow {
        0% { transform: scale(0); }
        100% { transform: scale(1); }
    }

    /* Single leaf */
    .flower__leaf {
        position: absolute;
        width: 70px;
        height: 25px;
        background: linear-gradient(to right, #a8e6cf, #2eb872);
        border-radius: 20px;
        transform-origin: left center;
        opacity: 0;
        animation: leafGrow 2s ease forwards;
    }

    @keyframes leafGrow {
        0% { transform: scale(0) rotate(0deg); opacity: 0; }
        100% { transform: scale(1) rotate(20deg); opacity: 1; }
    }

    .flower__leaf--1 { top: 20px; left: 10px; animation-delay: 0.2s; }
    .flower__leaf--2 { top: 50px; left: -10px; transform: rotate(-20deg); animation-delay: 0.4s; }
    .flower__leaf--3 { top: 80px; left: 15px; transform: rotate(25deg); animation-delay: 0.6s; }

    /* White glowing center */
    .flower__white-circle {
        position: absolute;
        top: -20px;
        left: 32px;
        width: 35px;
        height: 35px;
        background: white;
        border-radius: 50%;
        box-shadow: 0 0 20px rgba(255,255,255,0.8);
        animation: glow 2s ease-in-out infinite;
    }

    @keyframes glow {
        0%, 100% { box-shadow: 0 0 20px rgba(255,255,255,0.8); }
        50% { box-shadow: 0 0 40px rgba(255,255,255,1); }
    }

    /* Light lines (glowing pollen) */
    .flower__light {
        position: absolute;
        width: 3px;
        height: 25px;
        background: rgba(255,255,255,0.6);
        left: 50%;
        top: 0;
        transform-origin: bottom center;
        animation: bloom 2.5s ease forwards;
        opacity: 0;
    }

    @keyframes bloom {
        0% { transform: scale(0); opacity: 0; }
        100% { transform: scale(1); opacity: 1; }
    }

    .flower__light--1 { transform: rotate(0deg); }
    .flower__light--2 { transform: rotate(30deg); }
    .flower__light--3 { transform: rotate(60deg); }
    .flower__light--4 { transform: rotate(90deg); }
    .flower__light--5 { transform: rotate(120deg); }
    .flower__light--6 { transform: rotate(150deg); }
    .flower__light--7 { transform: rotate(180deg); }

